# ADB 滑動座標基礎值
X1=500
Y1=1500
X2=500
Y2=500

# 座標抖動機制 (像素)
# 每次滑動時，會隨機增加 0 到 COORD_JITTER 之間的偏移量，模擬真人操作
COORD_JITTER=20

# 時間設定 (秒)
# 基礎間隔時間
INTERVAL=5
# 時間抖動機制：每次滑動後會隨機額外增加 0 到 INTERVAL_JITTER 之間的秒數
# 例如：INTERVAL=5, INTERVAL_JITTER=2，則實際等待時間為 5~7 秒隨機
INTERVAL_JITTER=2

# 總執行時長 (秒)
# 設定為 0 或負數代表「無限循環」直到手動停止
TOTAL_DURATION=0

# 清理設定
# 若設為 true，腳本退出時會強制關閉 ADB Server 進程
KILL_ADB_ON_EXIT=false
