# ADB 滑動座標基礎值
X1=500
Y1=1500
X2=500
Y2=500

# 座標抖動機制 (像素)
# 每次滑動時，會隨機增加 0 到指定範圍之間的偏移量
# X 軸抖動範圍 (寬度方向)
COORD_X_JITTER=10
# Y 軸抖動範圍 (高度方向)
COORD_Y_JITTER=50

# 時間設定 (秒)
# 基礎間隔時間
INTERVAL=5
# 時間抖動機制：每次滑動後會隨機額外增加 0 到 INTERVAL_JITTER 之間的秒數
INTERVAL_JITTER=2

# 總執行時長 (秒)
# 設定為 0 或負數代表「無限循環」直到手動停止
TOTAL_DURATION=0

# 清理設定
# 若設為 true，腳本退出時會強制關閉 ADB Server 進程
KILL_ADB_ON_EXIT=false